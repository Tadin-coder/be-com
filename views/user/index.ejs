          <div class="box">
            <div class="name">
              <h6>Rachu's</h6>
            </div>
            <div class="img-box">
              <img src="images/rachu.png" alt="" />
            </div>
            <div class="detail-box">
              <a href="/rachu"> Visit Now </a>
            </div>
          </div>

          <div class="box">
            <div class="name">
              <h6>T-Shirt's</h6>
            </div>
            <div class="img-box">
              <img src="images/shit1.png" alt="" />
            </div>
            <div class="detail-box">
              <a href="/t-shirt"> Visit Now </a>
            </div>
          </div>

          <div class="box">
            <div class="name">
