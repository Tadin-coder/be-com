<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="../login/login.css" />
    <title>BE-COM</title>
    <link href="/images/logo.png" rel="icon" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container">
      <div class="row m-5 no-gutters shadow-lg">
        <div class="col-md-6 d-none d-md-block">
          <img
            src="/images/frontphoto1.png"
            class="img-fluid"
            style="min-height: 100%"
          />
        </div>
        <div class="col-md-6 bg-white p-5">
          <h4 class="pb-3">Welcome Admin</h4>
          <% if (typeof errorMessage !== "undefined") { %>
          <p class="alert alert-danger" role="alert" color="red">
            <%= errorMessage %>
          </p>
          <% } %> <% if (typeof successMessage !== "undefined") { %>
          <p class="alert alert-success" role="alert"><%= successMessage %></p>
          <% } %>
          <div class="form-style">
            <form action="/admin-login" method="post">
              <div class="form-group pb-3">
                <input
                  type="email"
                  placeholder="Email"
                  class="form-control"
                  id="exampleInputEmail1"
                  aria-describedby="emailHelp"
                  name="username"
                />
                <p style="color: red">
                  <%= (typeof errors!="undefined" && typeof
                  errors.username!="undefined") ? errors.username.msg: ""%>
                </p>
              </div>

              <div class="form-group pb-3">
                <input
                  type="password"
                  placeholder="Password"
                  class="form-control"
                  id="exampleInputPassword1"
                  name="password"
                />
                <p style="color: red">
                  <%= (typeof errors!="undefined" && typeof
                  errors.password!="undefined") ? errors.password.msg: ""%>
                </p>
              </div>

              <div class="pb-2">
                <button
                  type="submit"
                  class="btn btn-warning w-100 font-weight-bold mt-2"
                >
                  Login
                </button>
              </div>
              <div class="d-flex align-items-center justify-content-between">
                <div><a href="/aforgotPassword">Forget Password?</a></div>
              </div>
            </form>
            <div class="sideline">BE-COM</div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
