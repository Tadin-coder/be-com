<%- include("../partials/adminheader") -%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <div class="d-flex flex-column" id="content-wrapper">
            <div class="d-flex flex-column" id="content-wrapper-1">
                <div id="content">
                    <div class="container-fluid">
                        <h3 class="text-dark mb-4"></h3>
                        <div class="card shadow">
                            <div class="card-header py-3">
                                <h3 class="text-info m-0 fw-bold" style="text-align: center;">Userlist</h3>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive table mt-2" id="dataTable-1" role="grid" aria-describedby="dataTable_info">
                                    <table class="table my-0" id="dataTable">
                                        <thead >
                                            <tr >
                                               
                                                <td style="font-weight: bold;">Name</td>
                                                <td style="font-weight: bold;">Email</td>
                                                <td style="font-weight: bold;">Address</td>
                                                <td style="font-weight: bold;">Contact</td>
                                                <td style="font-weight: bold;">Action</td>
                                            </tr>
                                        </thead>
                                        <tbody>

                                           
                                            <% users.forEach(function(user){ %>

                                           
                                            <tr>
                                                
                                                <td><%= user.name %></td>
                                                <td><%= user.username %></td>
                                                <td><%= user.address %></td>
                                                <td><%= user.phone %></td>
                                                <td>
                                                   <a href="/editUser/<%= user._id %>">
                                                    <i class="fa fa-edit" style="font-size: 18px;color:orange"></i></a>
                                                   
                                               
                                                    <a  role="button" data-toggle="modal" href="#delete<%= user._id %>" style="margin-left:8px">
                                                         <i class="fa fa-trash" style="font-size: 18px;color:rgb(237, 20, 20)"></i>
                                                        </a>
                                                        <div class="modal fade" role="dialog" tabindex="-1" id="delete<%= user._id %>">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h4>Delete User !</h4><button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button></div>
                                                                    <div class="modal-body">
                                                                        <p class="text-center text-muted">Are you sure you want to Delete the User</p>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <div class="col text-center">
                                                                            <a class="btn btn-danger" href="/deleteUser/<%= user._id %>">
                                                                                Delete</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                  </td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                        <tfoot>
                                            <tr></tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/theme.js"></script>
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/pop/assets/js/jquery.min.js"></script>
    <script src="/pop/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.js"></script>
    <script src="/pop/assets/js/Profile-Edit-Form.js"></script>
    <script src="/pop/assets/js/theme.js"></script>
</body>

</html>